<Window x:Class="client.LoggedHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoggedHome" Height="511.53" Width="970.225">
    <Grid Loaded="Grid_Loaded">
        <ListView x:Name="listViewTasks" Height="346" Margin="262,43,44,0" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding id}" Width="40"/>
                    <GridViewColumn Header="parent" DisplayMemberBinding="{Binding parent}" Width="70"/>
                    <GridViewColumn Header="create" DisplayMemberBinding="{Binding createOn}" Width="70"/>
                    <GridViewColumn Header="last change" DisplayMemberBinding="{Binding lastChange}" Width="100"/>
                    <GridViewColumn Header="done" DisplayMemberBinding="{Binding done}" Width="70"/>
                    <GridViewColumn Header="description" DisplayMemberBinding="{Binding description}" Width="300"/>
                </GridView>
            </ListView.View>
            <Button Height="97" Width="100"/>
        </ListView>
        <TreeView x:Name="treeViewTaskExplorer" HorizontalAlignment="Left" Height="346" Margin="10,43,0,0" VerticalAlignment="Top" Width="162">
            <TreeView.Resources>
                <ContextMenu x:Key ="NodeContextMenu"  StaysOpen="true">
                    <MenuItem x:Name="menuItemAddNewSubtask" Header="Add new subtask" Click="menuItemAddNewSubtask_Click"/>
                    <MenuItem x:Name="menuItemDeleteTask" Header="Delete task" Click="menuItemDeleteTask_Click"/>
                    <MenuItem x:Name="menuItemChange" Header="Change task" Click="menuItemChange_Click"/>
                    <MenuItem x:Name="menuItemShowTask" Header="Show task" Click="menuItemShowTask_Click"/>
                </ContextMenu>
                <ContextMenu x:Key ="RootMenu"  StaysOpen="true">
                    <MenuItem x:Name="menuItemAddNewTask1" Header="Add new task" Click="menuItemAddNewTask1_Click"/>
                </ContextMenu>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
